{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["es6", "esnext"],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "../@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
